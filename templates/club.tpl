<script type="text/javascript">
$(document).ready(function()
{
    $('.enlace-club').on("click",function()
    {
        var elem = $(this).attr('id');
        var abierto;
        if ($('#' + elem + "-content").css('display') == "block")
        {
            abierto = true;
        }
        
        $('.contenido-club').slideUp();
        if (!abierto)
        {
            $('#club-descripcion').fadeOut();
            $('#' + elem + "-content").slideDown();
        }
        else
        {
            $('#club-descripcion').fadeIn();
        }
    });
});
</script>
